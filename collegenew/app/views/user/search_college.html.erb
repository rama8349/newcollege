<%=stylesheet_link_tag 'showpage'%>
<h2>Listing Colleges</h2>
<table class="total">

<%count=0%>
<tr class="letters">
<td>S.No</td>
<td>college Name</td>
<td>Short Name</td>
<td>college Address</td>
<td>Establish Date</td>
<td>Status</td>
<!--<td>Delete</td>-->
</tr>
 <%count=0%>
    <% for college in @college %>
         <%count=count+1%>
<%if count%2 == 0%>
<%row_css ='even'%>
<%else%>
<%row_css ='odd'%>
<%end%>
<tr class=<%=row_css%>>
            <td><%=count%></td>
            <td><%= college.college_name %></td>
            <!--<td><%#= city.state.state_name %></td>-->
            <td><%= college.college_short_name %></td>
            <td><%= college.address %></td>
            <td><%= college.establish_date%></td>
            <td><%= college.status %></td>

        </tr>
    <% end %>

</table>
