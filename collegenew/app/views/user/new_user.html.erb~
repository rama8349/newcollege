<script type="text/javascript" language="javascript">
jQuery(document).ready(function(e){
	
	jQuery('#inc').submit(function(e){
	var fn=jQuery('#user_first_name').val()
	var sn=jQuery('#user_sur_name').val()
	var email=jQuery('#user_email').val()
	var re = /^(([^<>()[]\.,;:s@"]+(.[^<>()[]\.,;:s@"]+)*)|(".+"))@(([[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}])|(([a-zA-Z-0-9]+.)+[a-zA-Z]{2,}))$/igm;
    var reg=/\S+@\S+\.\S+/;
    var phoneno = /^\d{10}$/;
	var con_email=jQuery('#user_confirm_email').val()
	var pwd=jQuery('#user_pasword').val()
	var day=jQuery('#user_day').val()
	var month=jQuery('#user_month').val()
	var year=jQuery('#user_year').val()
	var radios = document.getElementsByName("user[gender]")
   
	 var formValid = false;
	//var gender=jQuery('#user_gender[0]').val()
	//alert(gender)
	if (fn==""){
		jQuery("p1").show();
	jQuery("p1").text("Please select first name");
	e.preventDefault();
	}
	else
	{
		jQuery("p1").hide();
	}
	
	 if (sn==""){
	 		jQuery("p2").show();
	jQuery("p2").text("Please select sur name");
    e.preventDefault();
	}
	else
	{
		jQuery("p2").hide();
	}
	 if (email==""){
	 		jQuery("p3").show();
		jQuery("p3").text("Please select email or mobile number");
		}
	else if(email !="" && reg.test(email)==false && isNaN(email)==true) {
		
alert("Please Enter valid email id ")	
	}
	else if(email !="" && phoneno.test(email)==false && isNaN(email)==false)
	{
		alert('please enater valid mobile number')
	}	
	else
	{
		jQuery("p3").hide();
	}
 if (con_email==""){
 	
 		jQuery("p4").show();
		jQuery("p4").text("Please confirm email or mobile number");
	e.preventDefault();
	}
	else if(email!=con_email)
	{
		jQuery("p4").text("Your email Address or Mobile or do not match Please try Again")
	}
	else
	{
		jQuery("p4").hide();
	}
	
	 if (pwd=="")
	{
			jQuery("p7").show();
		jQuery("p7").text("Please enter new password");
e.preventDefault();
	}
	else
	{
		jQuery("p7").hide();
	}
	
	 if (day==""|| month==""||year==""){
	 		jQuery("p5").show();
	 	jQuery("p5").text("Please select date of birth");
	e.preventDefault();
	}
	else
	{
		jQuery("p5").hide();
	}
  	
	
	

	
	});
});
 

</script>
